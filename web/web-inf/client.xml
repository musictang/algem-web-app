    <entry key="address.map" value="https://goo.gl/maps/sx4HeE4JLj52" />
    <entry key="website.label" value="http://www.musiques-tangentes.asso.fr" />
    <entry key="facebook.label" value="https://fr-fr.facebook.com/MusiquesTangentes92" />
    <entry key="twitter.label" value="https://twitter.com/mustang_asso" />
  </util:map>

  <util:map id="hotline" key-type="java.lang.String" >
    <!--FIRST ENTRY : MANDATORY-->
    <entry key="Paris">
      <util:list>
        <!--PHONE NUMBER-->
        <value>01 02 03 04 05</value>
